{
    "presets": [
        [
            "es2015",
            {
                "modules": false
            }
        ],
        "react",
        "stage-0",
        "stage-1",
        "stage-2",
        "stage-3"
        // webpack 现在已经支持原生的 import 语句了, 并且将其运用在 tree-shaking 特性上
    ],
    "plugins": [
        "react-hot-loader/babel"
        // 开启 React 代码的模块热替换(HMR)
    ]
}